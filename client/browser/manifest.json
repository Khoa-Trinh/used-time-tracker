{
    "manifest_version": 3,
    "name": "Used Time Tracker",
    "version": "1.0",
    "description": "Track active tab usage and sync data to your private server. Privacy-focused and open-source.",
    "permissions": [
        "tabs",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://used-time-tracker.vercel.app/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background.js"
    }
}